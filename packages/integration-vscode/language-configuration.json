{
  "$schema": "https://raw.githubusercontent.com/martinring/vscode-language-configuration/master/schema.json",
  "comments": {
    "lineComment": "--",
    "blockComment": ["/*", "*/"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["${", "}"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "${", "close": "}" },
    { "open": "\"", "close": "\"", "notIn": ["string"] },
    { "open": "'", "close": "'", "notIn": ["string"] },
    { "open": "/*", "close": "*/" },
    { "open": "**", "close": "**" },
    { "open": "*", "close": "*" },
    { "open": "~~", "close": "~~" },
    { "open": "`", "close": "`" },
    { "open": "```", "close": "```" }
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"],
    ["*", "*"],
    ["**", "**"],
    ["~~", "~~"],
    ["`", "`"]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*::\\s*|^\\s*==\\s*|^\\s*NAMESPACE\\s|^\\s*FUNCTION\\s",
      "end": "^\\s*::\\s*|^\\s*==\\s*|^\\s*END\\s*(NAMESPACE|FUNCTION)?\\s*$"
    }
  },
  "indentationRules": {
    "increaseIndentPattern": "^\\s*(@vars|NAMESPACE|FUNCTION|STYLE)\\b.*$|\\{[^}]*$",
    "decreaseIndentPattern": "^\\s*(@/vars|END\\s*(NAMESPACE|FUNCTION)?|\\})\\s*$"
  },
  "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)",
  "onEnterRules": [
    {
      "beforeText": "^\\s*::\\s*.*$",
      "action": {
        "indent": "none"
      }
    },
    {
      "beforeText": "^\\s*(\\+|\\*)\\s*.*$",
      "action": {
        "indent": "indent"
      }
    },
    {
      "beforeText": "^\\s*-\\s*$",
      "action": {
        "indent": "outdent"
      }
    }
  ]
}
