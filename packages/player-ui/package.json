{
  "name": "@writewhisker/player-ui",
  "version": "1.0.0",
  "description": "Drop-in UI components for embedding Whisker stories",
  "license": "AGPL-3.0",
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./themes/*": "./dist/themes/*"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build && tsc --emitDeclarationOnly --outDir dist",
    "preview": "vite preview"
  },
  "dependencies": {
    "@writewhisker/core-ts": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  },
  "keywords": [
    "whisker",
    "interactive-fiction",
    "story",
    "player",
    "ui",
    "embed"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/writewhisker/whisker-editor-web.git",
    "directory": "packages/player-ui"
  },
  "publishConfig": {
    "access": "public"
  }
}
