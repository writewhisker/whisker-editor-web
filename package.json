{
  "name": "@writewhisker/monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Writewhisker monorepo - interactive fiction authoring tools",
  "type": "module",
  "author": "Jim Spring",
  "license": "AGPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://github.com/writewhisker/whisker-editor-web.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.20.0",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:run": "turbo run test:run",
    "test:coverage": "turbo run test:coverage",
    "test:e2e": "playwright test",
    "test:e2e:smoke": "playwright test --config=playwright.smoke.config.ts",
    "lint": "turbo run lint",
    "check": "turbo run check",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,svelte}\"",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build --filter='./packages/*' && changeset publish"
  },
  "dependencies": {
    "@octokit/oauth-app": "^8.0.3",
    "@octokit/rest": "^22.0.0",
    "@sentry/svelte": "^10.22.0",
    "@types/jszip": "^3.4.0",
    "@writewhisker/audio": "workspace:*",
    "@writewhisker/core-ts": "workspace:*",
    "@writewhisker/editor-base": "workspace:*",
    "@xyflow/svelte": "^1.3.1",
    "dagre": "^0.8.5",
    "dompurify": "^3.3.0",
    "idb": "^8.0.3",
    "isomorphic-dompurify": "^2.30.1",
    "jszip": "^3.10.1",
    "marked": "^16.4.1",
    "monaco-editor": "^0.54.0",
    "nanoid": "^5.1.6",
    "svelte": "^5.0.0",
    "svelte-virtual-list": "^3.0.1",
    "wasmoon": "^1.16.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.12",
    "@playwright/test": "^1.56.1",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tailwindcss/postcss": "^4.1.14",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/svelte": "^5.2.8",
    "@tsconfig/svelte": "^5.0.5",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/node": "^24.6.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "fake-indexeddb": "^6.2.4",
    "happy-dom": "^20.0.10",
    "jsdom": "^27.0.1",
    "postcss": "^8.5.6",
    "prettier": "^3.5.2",
    "svelte-check": "^4.3.2",
    "tailwindcss": "^4.1.14",
    "turbo": "^2.4.1",
    "typescript": "~5.9.3",
    "vite": "^7.1.7",
    "vite-plugin-monaco-editor": "^1.1.0",
    "vitest": "^3.2.4"
  }
}
