{
  "name": "@writewhisker/storage",
  "version": "0.1.0",
  "description": "Framework-agnostic storage layer for Whisker interactive fiction",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly --outDir dist",
    "dev": "vite build --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "check": "tsc --noEmit"
  },
  "dependencies": {
    "@writewhisker/core-ts": "workspace:*",
    "eventemitter3": "^5.0.1",
    "idb": "^8.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "@vitest/coverage-v8": "^1.3.1",
    "typescript": "^5.3.3",
    "vite": "^7.1.7",
    "vitest": "^1.3.1"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "whisker",
    "storage",
    "indexeddb",
    "filesystem",
    "interactive-fiction"
  ],
  "author": "Whisker Team",
  "license": "MIT"
}
