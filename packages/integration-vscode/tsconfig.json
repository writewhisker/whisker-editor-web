{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "composite": true,
    "declaration": true,
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM"],
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*", "syntaxes/*.json", "*.json"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "package.json"]
}
