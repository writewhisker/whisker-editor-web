{
  "name": "@writewhisker/macros",
  "version": "0.1.0",
  "description": "Macro system for Whisker interactive fiction - template syntax for loops, function calls, and custom macros",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly --outDir dist",
    "dev": "vite build --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "check": "tsc --noEmit"
  },
  "dependencies": {
    "@writewhisker/core-ts": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "@vitest/coverage-v8": "^1.3.1",
    "typescript": "^5.3.3",
    "vite": "^7.1.7",
    "vitest": "^1.3.1"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "whisker",
    "macros",
    "templates",
    "interactive-fiction",
    "loops",
    "template-engine"
  ],
  "author": "Whisker Team",
  "license": "MIT"
}
