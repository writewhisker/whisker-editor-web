{
  "name": "@writewhisker/export",
  "version": "0.1.0",
  "description": "Export system for Whisker - JSON, HTML, Markdown, Twine, EPUB, and Static Site exporters",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "vite build",
    "build:types": "tsc --emitDeclarationOnly",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "check": "tsc --noEmit"
  },
  "keywords": [
    "whisker",
    "interactive-fiction",
    "export",
    "html",
    "markdown",
    "twine",
    "epub"
  ],
  "author": "Whisker Team",
  "license": "AGPL-3.0",
  "dependencies": {
    "@writewhisker/core-ts": "workspace:*",
    "isomorphic-dompurify": "^2.0.0",
    "jszip": "^3.10.0",
    "marked": "^12.0.0",
    "nanoid": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^1.6.1",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^1.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/writewhisker/whisker-editor-web.git",
    "directory": "packages/export"
  }
}
